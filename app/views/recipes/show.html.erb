<div class = "recipe-box">
  <h3><%= @recipe.name%></h3>
  <img width=300 class="large-image" src="<%= @recipe.large_image %>"/> 
  <section class="ingredients-box">
    <h2>ingredients</h2>
    <ul>
      <% @ingredients.each do |i| %>
      <li class = "ingredients"><%= link_to i.name, ingredient_path(i) %></li>
      <% end %>
    </ul>
  </section>
  <p>
    <% unless !logged_in? || @current_user.favorites.include?(@recipe.name)%>
      <%= link_to 'â™¥', favorite_recipe_path(@recipe.id), :method => :post, class: "giantheart" %>
    <% end %>
  </p>
  <% unless @recipe.similar.nil? %>
    <h2>recipes with a similar ingredients list</h2>
        <%= render '/recipes/single_recipe' %>
  <% end %>
</div>